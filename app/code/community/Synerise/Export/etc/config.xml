<?xml version="1.0"?>
<config>
    <modules>
        <Synerise_Export>
            <version>0.2.2</version>
        </Synerise_Export>
    </modules>
    <frontend>
        <routers>
            <synerise_export>
                <use>standard</use>
                <args>
                    <module>Synerise_Export</module>
                    <frontName>synerise_export</frontName>
                </args>
            </synerise_export>
        </routers>
        <translate>
            <modules>
                <Synerise_Export>
                    <files>
                        <default>Synerise_Export.csv</default>
                    </files>
                </Synerise_Export>
            </modules>
        </translate>
    </frontend>  
    <global>
        <blocks>
            <synerise_export>
                <class>Synerise_Export_Block</class>
            </synerise_export>
        </blocks>
        <models>
            <synerise_export>
                <class>Synerise_Export_Model</class>
            </synerise_export>
        </models>
<!--        <resources>
            <synerise_export_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </synerise_export_write>
            <synerise_export_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </synerise_export_read>
        </resources>-->
        <helpers>
            <synerise_export>
                <class>Synerise_Export_Helper</class>
            </synerise_export>
        </helpers>
    </global>
    <default>
        <synerise_export>
            <attr_other>
                <Producent>manufacturer</Producent>
            </attr_other>
        </synerise_export>
    </default>
    <adminhtml>
        <translate>
            <modules>
                <Synerise_Export>
                    <files>
                        <default>Synerise_Export.csv</default>
                    </files>
                </Synerise_Export>
            </modules>
        </translate>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <synerise_export>
                                            <title>Export Synerise</title>
                                        </synerise_export>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <synerise_export>
                    <file>synerise_export.xml</file>
                </synerise_export>
            </updates>
        </layout>
    </adminhtml>
    <admin>
        <routers>
            <synerise_export>
                <use>admin</use>
                <args>
                    <module>Synerise_Export</module>
                    <frontName>synerise_export</frontName>
                </args>
            </synerise_export>
        </routers>
    </admin>
</config>
